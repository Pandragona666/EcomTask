<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="EcomLocatorV2.Views.UserDetail">

    <StackLayout>
        <StackLayout Padding="20">
            <Label Text="{Binding UserDetails.FirstName}" FontSize="15" FontAttributes="Bold"/>
            <Label Text="{Binding UserDetails.LastName}"  FontSize="15" FontAttributes="Bold"/>
            <Label Text="{Binding UserDetails.Age}" FontSize="15" FontAttributes="Bold"/>
            <Label Text="{Binding UserDetails.City}" FontSize="15" FontAttributes="Bold"/>
        </StackLayout>
    </StackLayout>
    
</ContentPage>